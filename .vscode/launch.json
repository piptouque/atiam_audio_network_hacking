    "version": "0.2.0",
    "configurations": [
        {
            "name": "Train: MNIST VAE",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/code/train.py",
            "console": "integratedTerminal",
            "args": ["--config", "${cwd}/code/config/mnist_vae_config.json"]

        },
        {
            "name": "Resume: MNIST VAE",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/code/train.py",
            "console": "integratedTerminal",
            "args": ["--config", "${cwd}/code/config/mnist_vae_config.json", "--resume", "${file}"]

        },
        {
            "name": "Test: MNIST VAE",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/code/test.py",
            "console": "integratedTerminal",
            "args": ["--config", "${cwd}/code/config/mnist_vae_config.json", "--resume", "${file}"]

        }
    ]
}