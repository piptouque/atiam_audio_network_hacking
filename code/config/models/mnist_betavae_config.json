{
    "version": 5,
    "name": "Mnist_BetaVae",
    "n_gpu": 1,
    "arch": {
        "handle": "obj",
        "module": "model",
        "type": "BetaVae",
        "kwargs": {
            "input_dim": [
                1,
                28,
                28
            ],
            "latent_size": 2,
            "conv_cfg": {
                "kernel_size": 5,
                "stride": 2
            },
            "e_sampler_fac": {
                "handle": "ftn",
                "module": "model",
                "type": "GaussianRandomSampler"
            },
            "d_sampler_fac": {
                "handle": "ftn",
                "module": "model",
                "type": "GaussianRandomSampler",
                "kwargs": {
                    "fixed_var": 0.01
                }
            },
            "beta_scheduler": {
                "handle": "obj",
                "module": "model",
                "type": "BetaScheduler",
                "kwargs": {
                    "step_size": 1,
                    "gamma": 0.85,
                    "init_val": 50000,
                    "bounds": [
                        0,
                        50000
                    ]
                }
            }
        }
    },
    "data_loader": {
        "module": "data_loader",
        "type": "MnistDataLoader",
        "kwargs": {
            "data_dir": "toy/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "module": "torch.optim",
        "type": "Adam",
        "kwargs": {
            "lr": 0.001,
            "betas": [
                0.9,
                0.999
            ],
            "eps": 1e-07,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": {
        "module": "loss",
        "type": "beta_vae_total_loss"
    },
    "metrics": [
        {
            "module": "metric",
            "type": "vae_reconstruction_loss"
        },
        {
            "module": "metric",
            "type": "vae_divergence_loss"
        }
    ],
    "lr_scheduler": {
        "module": "torch.optim.lr_scheduler",
        "type": "StepLR",
        "kwargs": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "module": "trainer",
        "type": "BetaVaeTrainer"
    },
    "visualizer": {
        "module": "visualizer",
        "type": "BetaVaeVisualizer"
    },
    "training": {
        "epochs": 40,
        "save_dir": "saved_models/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10
    },
    "visualization": {
        "tensorboard": true,
        "sampled_latent": {
            "plot": true,
            "nb_points": [
                32,
                32
            ],
            "range": [
                [
                    -2,
                    2
                ],
                [
                    -2,
                    2
                ]
            ]
        },
        "clusters_latent": {
            "plot": true,
            "nb_points": 5000
        }
    }
}