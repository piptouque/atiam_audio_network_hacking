{
    "version": 6,
    "name": "BinaryMnist_Vae",
    "n_gpu": 1,
    "arch": {
        "handle": "obj",
        "module": "model",
        "type": "Vae",
        "args": {
            "input_dim": [
                1,
                28,
                28
            ],
            "latent_size": 2,
            "conv_cfg": {
                "kernel_size": 5,
                "stride": 2
            },
            "e_sampler_fac": {
                "handle": "ftn",
                "module": "model",
                "type": "GaussianRandomSampler",
                "args": {}
            },
            "d_sampler_fac": {
                "handle": "ftn",
                "module": "model",
                "type": "BernoulliRandomSampler",
                "args": {}
            }
        }
    },
    "data_loader": {
        "module": "data_loader",
        "type": "BinaryMnistDataLoader",
        "args": {
            "data_dir": "toy/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "module": "torch.optim",
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "betas": [
                0.9,
                0.999
            ],
            "eps": 1e-07,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": {
        "module": "loss",
        "type": "vae_total_loss",
        "args": {}
    },
    "metrics": [
        {
            "module": "metric",
            "type": "vae_reconstruction_loss",
            "args": {}
        },
        {
            "module": "metric",
            "type": "vae_divergence_loss",
            "args": {}
        }
    ],
    "lr_scheduler": {
        "module": "torch.optim.lr_scheduler",
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "module": "trainer",
        "type": "UnsupervisedTrainer",
        "args": {}
    },
    "visualizer": {
        "module": "visualization",
        "type": "VaeVisualizer",
        "args": {}
    },
    "training": {
        "epochs": 40,
        "save_dir": "saved_models/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10
    },
    "visualization": {
        "tensorboard": true,
        "sampled_latent": {
            "plot": true,
            "nb_points": [
                32,
                32
            ],
            "range": [
                [
                    -2,
                    2
                ],
                [
                    -2,
                    2
                ]
            ]
        },
        "clusters_latent": {
            "plot": true,
            "nb_points": 5000
        }
    }
}