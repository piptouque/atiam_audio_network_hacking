{
    "version": 4,
    "name": "BinaryMnist_Vae",
    "n_gpu": 1,

    "arch": {
        "handle": "obj",
        "type": "ImageVae",
        "args": {
            "image_dim": [1, 28, 28],
            "latent_size": 2,
            "e_sampler_fac": {
                "handle": "ftn",
                "type": "GaussianRandomSampler",
                "args": {
                }
            },
            "d_sampler_fac": {
                "handle": "ftn",
                "type": "BernoulliRandomSampler",
                "args": {
                }
            }
        }
    },
    "data_loader": {
        "type": "BinaryMnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "betas": [0.9, 0.999],
            "eps": 1e-07,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "vae_total_loss",
    "metrics": [
        {
            "type": "vae_reconstruction_loss",
            "args": {

            }
        }, {
            "type": "vae_divergence_loss",
            "args": {

            }
        }
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "UnsupervisedTrainer",
        "args": {

        }
    },
    "visualizer": {
        "type": "ImageVaeVisualizer",
        "args": {

        }
    },
    "logger": {
        "config_path":  "logger_config.json"
    },
    "training": {
        "epochs": 40,

        "save_dir": "saved_models/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10
    },
    "visualization": {
        "tensorboard": true,
        "sampled_latent": {
            "plot": true,
            "nb_points": [32, 32],
            "range": [[-2, 2], [-2, 2]]
        },
        "clusters_latent" : {
            "plot": true,
            "nb_points": 5000
        }
    }
}
