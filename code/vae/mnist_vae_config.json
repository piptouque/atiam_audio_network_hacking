{
    "version": "0.2.0",
    "name": "Mnist_Vae",
    "n_gpu": 1,

    "arch": {
        "handle": "obj",
        "type": "MnistVae",
        "args": {
            "image_dim": [1, 28, 28],
            "latent_size": 2,
            "e_sampler_fac": {
                "handle": "ftn",
                "type": "GaussianRandomSampler",
                "args": {
                }
            },
            "d_sampler_fac": {
                "handle": "ftn",
                "type": "BernoulliRandomSampler",
                "args": {
                }
            }
        }
    },
    "data_loader": {
        "handle": "obj",
        "type": "UnsupervisedMnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "handle": "obj",
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "vae_loss",
    "metrics": [
    ],
    "lr_scheduler": {
        "handle": "obj",
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved_models/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
